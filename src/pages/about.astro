---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "About Me";
const titleColor = "turquoise";
const identity = {
  firstName: "Robert",
  country: "Scotland",
  occupation: "Physics guy",
  hobbies: ["guitar", "art and code", "swimming"],
};
const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];
const happy = true;
const finished = false;
const goal = 3;
const skillColor = "red";
const fontWeight = "800";
const textCase = "upperCase";
---

<BaseLayout {pageTitle} {titleColor} >

      <style define:vars={{skillColor, fontWeight, textCase }}>
      h1 {
        font-size: 8rem;
      } 
      .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
    </style>

    {happy && <p>I am happy to be learning astro</p>}

    {finished && <p>I finished this tutorial</p>}

    {
      goal === 3 ? (
        <p>My goal is to finish in 3 days</p>
      ) : (
        <p>My goal is not 3 days</p>
      )
    }

    <p>Here are some facts about me:</p>

    <ul>
      <li>My name is {identity.firstName}</li>
      <li>I live in {identity.country}</li>
      <li>My occupation is {identity.occupation}</li>
      <li>
        My hobbies are {identity.hobbies[0]}, {identity.hobbies[1]}, and {
          identity.hobbies[2]
        }
      </li>
    </ul>

    <p>My skills are:</p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>


</BaseLayout>